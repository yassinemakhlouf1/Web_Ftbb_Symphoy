{% extends 'back/base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="row">
                <div class="col-md-6">
                    <div class="main-card mb-3 card">
                        <div class="card-body"><h5 class="card-title">Add team </h5>
                            <form  method="POST" action= "{{url('team_update',{'id':team.id})}}">
                                <div class="position-relative form-group"><label for="Name" class="">Name</label><input name="name" id="name" placeholder="name team" type="text" class="form-control"value="{{team.name}}" ></div>
                                   <div class="position-relative form-group">
                                   <label for="exampleSelect" class="">Select</label>
                                   <select  name="id_competition"  class="form-control">
                                                         {% for c in comp %}
                                                        <option value={{c.id}} {% if c.id == team.idCompetition.id %} selected ="selected" {% endif %}>{{c.name}}</option>
                                                    {% endfor %}
                                                    </select>
                                                    </div>
                                <div class="position-relative form-group">
                                <label for="exampleFile" class="">File</label><input name="file" id="exampleFile" type="file" class="form-control-file">
                                    <small class="form-text text-muted">This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.</small>
                                </div>
                                <input type="submit" value="ADD" />
                            </form>
                        </div>
                    </div>
                </div>
         
            </div>
        </div>
  
      
    </div>
{% endblock %}

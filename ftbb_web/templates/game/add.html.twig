{% extends 'back/base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



    <div class="tab-content">
        <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
            <div class="row">
                <div class="col-md-6">
                    <div class="main-card mb-3 card">
                        <div class="card-body"><h5 class="card-title">Add Game </h5>
                            <form  method="POST" action= "{{url('Addgames')}}">
                                
                                <input type="hidden" value={{id_competition}} name="id_competition">
                                <input type="hidden" value={{id_phase}} name="id_phase">
                                <input type="hidden" value={{id_week}} name="id_week">
                                   <div class="position-relative form-group">
                                   <label for="exampleSelect" class="">Select Team home </label>
                                   <select  name="id_team_home"  class="form-control">
                                                         {% set i = 1 %}
                                                          {# index of select item #}
                                                         {% for c in teams %}
                                                         
                                                        <option value={{c.id}} >{{c.name}}</option>
                                                    {% endfor %}
                                                    </select>
                                   <label for="exampleSelect" class="">Select Team away </label>
                                   <select  name="id_team_away"  class="form-control">
                                                         {% for t in teams %}
                                                        <option value={{t.id}}>{{t.name}}</option>
                                                    {% endfor %}
                                                    </select>                 
                                                    </div>
                                <div class="position-relative form-group">
                                <label for="salle" class="">Hall</label>
                                <input name="salle" id="salle" placeholder="salle" type="text" class="form-control">
                                <label for="time" class="">Date</label>
                                <input name="time" id="time" placeholder="time" type="date" class="form-control">
                                </div>
                                <input type="submit" class="btn btn-primary" value="ADD" />
                            </form>
                        </div>
                    </div>
                </div>
         
            </div>
        </div>
  
      
    </div>
{% endblock %}
